<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="main" class="ru.learnup.march.Main"/>
    <bean id="newNumberEventListener" class="ru.learnup.march.events.NewNumberEventListener"/>
    <bean id="newNumberEventPublisher" class="ru.learnup.march.events.NewNumberEventPublisher"/>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="text"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>
</beans>